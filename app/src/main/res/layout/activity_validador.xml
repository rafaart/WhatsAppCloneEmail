<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev.whatsapp.activity.ValidadorActivity">

    <TextView
        android:id="@+id/textViewValidacaoID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="103dp"
        android:text="@string/textViewValidacaoID"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editTextValidacaoID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextValidacaoID"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:hint="XXXXXX"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonValidacaoID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValidacaoID" />

    <Button
        android:id="@+id/buttonValidacaoID"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="246dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/textoButtonValidacaoID"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextValidacaoID" />
</android.support.constraint.ConstraintLayout>
