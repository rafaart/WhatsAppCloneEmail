<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev.whatsapp.activity.LoginActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/editTextNomeLoginID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="Digite seu nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextTelLoginID"
        app:layout_constraintStart_toStartOf="@+id/editTextPaisID"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAreaLoginID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="(73)"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/editTextTelLoginID"
        app:layout_constraintStart_toEndOf="@+id/editTextPaisID"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeLoginID" />

    <EditText
        android:id="@+id/editTextTelLoginID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:hint="73 999998888"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAreaLoginID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextAreaLoginID" />

    <Button
        android:id="@+id/buttonCadastrarID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="49dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/textButtonCadastrar"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPaisID" />

    <EditText
        android:id="@+id/editTextPaisID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="37dp"
        android:ems="10"
        android:hint="+55"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/editTextAreaLoginID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeLoginID" />
</android.support.constraint.ConstraintLayout>
